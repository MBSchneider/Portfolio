<div class="row">
  <!-- start: Page section -->
  <section id="page-sidebar" class="span12">

    <div class="row-fluid">
      <!-- start: Slider -->
      <section id="slider">
        <div id="sequence-theme">
          <div id="sequence">
            <span class="prev"><i class="icon-angle-left"></i></span>
            <span class="next"><i class="icon-angle-right"></i></span>
            <ul>
              <li>
                <h2 class="title" style="text-align: right; right: 25%"><span>Matt Schneider</span></h2>
                <h3 class="subtitle" style="text-align: right; right: 25%"><span>Ruby on Rails Developer</span></h3>
                <img class="img-bg" src="<%= image_path("slider1.jpg") %>" alt="" />
              </li>
              <li>
                <h2 class="title" style="bottom:-25%"><span>Testimonial</span></h2>
                <h3 class="subtitle"><span>
                  Matt is a hard worker and a passionate <br />
                  web developer.  Also, he rubs my belly.<br />
                  - Hershey
                </span></h3>
                <img class="img-bg" src="<%= image_path("slider4.jpg") %>" alt="" />
              </li>
              <li>
                <h2 class="title" style="bottom:-25%"><span>Full stack web developer</span></h2>
                <h3 class="subtitle"><span>
                  Ruby on Rails<br/>
                  JavaScript / jQuery<br/>
                  HTML, CSS, Sass
                </span></h3>
                <img class="img-bg" src="<%= image_path("projects-2.jpg") %>" />
              </li>
            </ul>
          </div>
        </div>

      </section>
      <!-- end: Slider -->
    </div>

    <div class="row-fluid">
      <div class="hero-unit span12">
        <div class="row-fluid">
          <div class="span9">
            <h3>Ruby on Rails Web Developer</h3>
            <p> I am a Ruby on Rails developer with a business background. I am <span class='highlight'>passionate about coding</span>, and using software to <span class='highlight'>create value</span> and to <span class='highlight'>solve real-world problems</span>. I am proficient in Ruby on Rails, Javascript / jQuery, HTML, and CSS. </p>
          </div>
          <div class="span3">
            <div class="button-block">
              <div class="pull-vertical-center">
                <a href="<%= contacts_path %>" class="btn btn-primary btn-large">Contact Me</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>


    <h2 class="underline">Proficiencies</h2>
    <div class="row-fluid works">
    	<ul class="thumbnails">
    		<li class="span3 item">
    			<div class="thumbnail os">
    				<i class="icon-laptop"></i>
    				<h4 class="title">Ruby on Rails</h4>
    			</div>
    		</li>
    		<li class="span3 item">
    			<div class="thumbnail os">
    				<i class="icon-bar-chart"></i>
    				<h4 class="title">HTML & CSS</h4>
    			</div>
    		</li>
    		<li class="span3 item">
    			<div class="thumbnail os">
    				<i class="icon-coffee"></i>
    				<h4 class="title">Javascript & Coffeescript</h4>
    			</div>
    		</li>
    		<li class="span3 item">
    			<div class="thumbnail os">
    				<i class="icon-cogs"></i>
    				<h4 class="title">Python</h4>
    			</div>
    		</li>
    	</ul>
    </div>

    <hr class="transparent"/>

    <h2 class="underline">Selected Projects <small>- <a href="<%= projects_path %>">View All Projects >></a></small></h2>
    <div class="row-fluid works">
    	<ul class="thumbnails">
        <% @projects = Project.order(:priority)[0..2] %>
        <% @projects.each do |proj| %>
          <li class="span4 item">
            <div class="thumbnail">
              <a href="<%= proj.web_page %>" target="_blank" class="image">
                <%= image_tag proj.image_url(:proj) %>
                <span class="frame-overlay"></span>
              </a>
              <h4 class="title"><%= proj.title %></h4>
              <p class="description"><%= proj.short_description %></p>
            </div>
          </li>
        <% end %>
    	</ul>
    </div>

    <hr class="transparent"/>
    <% @posts = Post.where(:published => true).reverse[0..3] %>

    <h2 class="underline">Latest Blog Posts <small>- <a href="<%= posts_path %>">View All Posts >></a></small></h2>
    <div class="row-fluid works">
    	<ul class="thumbnails">
        <% @posts.each do |p| %>
    		<li class="span3 item">
    			<div class="thumbnail">
    				<a href="<%= post_path(p) %>" class="image">
              <%= image_tag p.image_url(:blog) %>
    					<p class="frame-overlay"></p>
    				</a>
    				<div class="meta">
    					<div class="block"><i class="icon-book"></i></div>
    				</div>
    				<div class="info" style="display:block">
    					<h4 class="title lp"><%= p.title %></h4>
    				</div>
            <br /><br /><br /><div class="description lp"><%= p.short_description %> </div>
    			</div>
    		</li>
        <% end %>
    	</ul>
    </div>
  </section>
<!-- end: Page section -->

</div>


