
<%= form_for [@commentable, @comment] do |f| %>
<p>
  <%= f.label :add_a_comment %><br />
  <%= f.text_area :body, class: "form-control", rows: "3" %>
</p>
<p>
  <%= f.label :Email %><br />
  <%= f.email_field :author_email %>
</p>
<p>
  <%= f.submit 'Create Comment', class: "btn btn-success btn-sm" %>
</p>
<% end %>

