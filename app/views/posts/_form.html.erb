<%= form_for @post, :html => {:multipart => true} do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, :cols => "50", :rows => "100" %>
  </div>
  <div class="field">
    <%= f.label :short_description %>
    <%= f.text_area :short_description, :size => "30x2" %>
  </div>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content, :cols => "50", :rows => "10" %>
  </div>
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
